#!/bin/bash
#-*- mode:sh -*-

PARALLEL=false
SUDO=false
SUDO_PASSWORD=
while getopts ":p:s:" opt
do
    case ${opt} in
        p)  PARALLEL=true ;
            echo "Invoking ssh in parallel."
            ;;
        s)  SUDO=true ;
            SUDO_PASSWORD=${OPTARG}
            echo "Enabling sudo."
            ;;
        \?) OPT_ERROR=1; break;;
        * ) echo "unsupported option $opt" ;;
    esac
done

shift $(($OPTIND - 1))

hosts=$(cat $(dirname $0)/hosts | sed -e "s/#.*//g")
commands=$@
if $SUDO
then
    commands="echo $SUDO_PASSWORD | sudo -S -p \"\" -- \"$commands\""
fi
echo "Running command: $commands"

for host in $hosts
do
    echo "logging in to $host..."
    if $PARALLEL
    then
        ssh $host "cd $PWD; $commands" &
    else
        ssh -t $host "cd $PWD; $commands"
    fi
done

wait
