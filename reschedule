#!/bin/bash

queue=$(qstat -Q | tail -n +3 | awk '{print $1}')
echo "queue: $queue"
nodect=$(pbsnodes | awk '/np/{sum+=$3}END{print sum}')
echo "nodect: $nodect"

resched_num=$((nodect*5))
regex=Q

echo "[$(date)] picking $resched_num jobs"

jobs=$($(dirname $0)/qgrep $regex | head -n $resched_num)

echo "[$(date)] holding"

qhold $jobs

echo "[$(date)] rescheduling"

qrls $jobs

